#Завдання 1


class Тварина:
    def __init__(self, вид, вага, вік):
        self.вид = вид
        self.вага = вага
        self.вік = вік

    def вивести_інформацію(self):
        print(f"Вид: {self.вид}, Вага: {self.вага} кг, Вік: {self.вік} років")

    def видавати_звук(self):
        print("Загальні звуки тварин")


class Собака(Тварина):
    def __init__(self, вид, вага, вік, порода):
        super().__init__(вид, вага, вік)  
        self.порода = порода

    def видавати_звук(self):
        print("Гав!")


class Кіт(Тварина):
    def __init__(self, вид, вага, вік, колір_шерсті):
        super().__init__(вид, вага, вік)
        self.колір_шерсті = колір_шерсті

    def видавати_звук(self):
        print("Мяу!")

# Приклад використання
собака = Собака("Собака", 20, 3, "Хаскі")
кіт = Кіт("Кіт", 5, 2, "Білий")

собака.вивести_інформацію()
собака.видавати_звук()

кіт.вивести_інформацію()
кіт.видавати_звук()
print('='*40,'\n')
#Завдання 2

class ТранспортнийЗасіб:
    def __init__(self, марка, модель, швидкість):
        self.марка = марка
        self.модель = модель
        self.швидкість = швидкість

    def переміщення(self, відстань):
        print(f"Переміщення на {відстань} км зі швидкістю {self.швидкість} км/год")


class Автомобіль(ТранспортнийЗасіб):
    def __init__(self, марка, модель, швидкість, кількість_дверей):
        super().__init__(марка, модель, швидкість)
        self.кількість_дверей = кількість_дверей

    def переміщення(self, відстань):
        print(f"Автомобіль {self.марка} {self.модель} переміщується на {відстань} км зі швидкістю {self.швидкість} км/год й кількість дверей {self.кількість_дверей}")


class Літак(ТранспортнийЗасіб):
    def __init__(self, марка, модель, швидкість, висота_польоту):
        super().__init__(марка, модель, швидкість)
        self.висота_польоту = висота_польоту

    def переміщення(self, відстань):
        print(f"Літак {self.марка} {self.модель} летить на {відстань} км зі швидкістю {self.швидкість} км/год на висоті {self.висота_польоту} метрів")


# Приклад використання
автомобіль = Автомобіль("Nissan", "Juke", 210, 4)
літак = Літак("F", "22", 865, 10000)

автомобіль.переміщення(100)
літак.переміщення(5000)
